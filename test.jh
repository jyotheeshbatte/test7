relationship OneToMany {
  A to B
}


entity Employee {
	/**
	* The firstname attribute.
	*/
	firstName String,
	lastName String,
	email String,
	phoneNumber String,
	hireDate Instant,
	salary Long,
	commissionPct Long
}

entity Job {
	jobTitle String,
	minSalary Long,
	maxSalary Long
}

enum Language {
    FRENCH, ENGLISH, SPANISH
}



// defining multiple OneToMany relationships with comments
relationship OneToMany {
	Employee to Job{employee}
		
}

